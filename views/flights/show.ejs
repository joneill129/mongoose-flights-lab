<!DOCTYPE html>
<html>
  <head>
    <title>hey</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav>
      <a href="/flights">All Flights</a>
      <a href="/flights/new">Add Flights</a>
      <a href="/destinations/new">Add Destination</a>
    </nav>
    <h1>Mongoose Flight Creator</h1>
    <table>
      <thead>

<section id='show-page'>
    <div>Airline: </div>
    <div><%= flight.airline %></div><br>
    <div>Airport: </div>
    <div><%= flight.airport %></div><br>
    <div>Flight No. </div>
    <div><%= flight.flightNo %></div><br>
    <div>Departs: </div>
    <div><%= flight.departs %></div><br>
    <div>Seat: </div>
    <div><% flight.tickets.forEach(function(t) { %>
        <%= t.seat %>
    <% }) %> 
    </div><br>
    <div>Price: </div>
    <div><% flight.tickets.forEach(function(t) { %>
        <%= t.price %>
    <% }) %> </div><br>
    <div>Destination: </div>
    <div><% destinations.forEach(function(d) { %>
        <%= d.destination %>
    <% }) %> </div><br>
    <br><br><br><br>
    <form id='-add-dest-to-ticket' action='/flights/<%= flight._id %>/destinations' method='POST'>
        <select name='destinationId'>
            <% destinations.map(d => %>
            <option value='destination'> <%= ${d.destination} %></option>
            <% ).join('') %>
        </select>
</form>
</section>
<br><h2>Create Ticket</h2>
<form id='add-ticket-form' method='POST' action="/flights/<%= flight._id %>/tickets">
<label>Seat:</label>
<input name="seat" required pattern="[A-F][1-9]\d?">
<label>Price:</label>
<input type='number' name='price'>
<input type='submit' value='Add Ticket'>
</form>

</body>
</html>