<%- include('../partials/header') %>

<h1>Mongoose Flight Creator</h1>
<table>
  <thead>

    <section id='show-page'>
      <div>Airline: </div>
      <div><%= flight.airline %></div><br>
      <div>Airport: </div>
      <div><%= flight.airport %></div><br>
      <div>Flight No. </div>
      <div><%= flight.flightNo %></div><br>
      <div>Departs: </div>
      <div><%= flight.departs %></div><br>
      <div>Seat: </div>
      <div><% flight.tickets.forEach(function(t) { %>
        <%= t.seat %>
        <% }) %>
      </div><br>
      <div>Price: </div>
      <div><% flight.tickets.forEach(function(t) { %>
        <%= t.price %>
        <% }) %> </div><br>
      <div>Destination:</div>
      <div><% destinations.forEach(function(d) { %>
        <%= d.destination %>
        <% }) %> </div><br>
    </section>
    <br><br><br><br>
    <form id='add-dest-to-list' action='/flights/<%= flight._id %>/destinations' method='POST'>
      <select name='destinations'>
        <% destinations.map(d => { %>
        <option value='destination'> <%= d.destination %></option>
        <% }).join('') %>
      </select>
      <button type='submit'>Add to Flight</button>
    </form>
    <br>
    <h2>Create Ticket</h2>
    <form id='add-ticket-form' method='POST' action='/flights/<%= flight._id %>/tickets'>
      <label>Seat:</label>
      <input name='seat' required pattern='[A-F][1-9]\d?'>
      <label>Price:</label>
      <input type='number' name='price'>
      <input type='submit' value='Add Ticket'>
    </form>

    <%- include('../partials/footer') %>